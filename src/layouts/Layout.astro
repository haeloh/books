---
import { ClientRouter } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<div>
			<slot />
		</div>
	</body>
</html>

<style is:global>
	@reference "tailwindcss";
	@plugin '@tailwindcss/typography';
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		color: #fff;
		margin: 0;
		width: 100%;
		height: 100%;
	}
	,
	body {
		@apply grid place-content-center p-20;
	}
	body > div {
		@apply container;
		margin-left: auto;
		margin-right: auto;
		max-width: 1000px;
	}
</style>
