---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import '../styles/global.css';


const books = await getCollection('books');

export const prerender = true;
---

<Layout title="Libros para programadores">
	<main>
		<h1 class="text-center text-7xl font-extrabold mt-20">
			Dev ðŸ’» <span class="block">Books</span>
		</h1>

		<section
			aria-label="Libros recomendados para programadores"
			class="mt-20 mb-20 inline-block"
		>
			<div class="px-4 mx-auto max-w-screen-xl">
				<div class="grid gap-6 md:grid-cols-2">
					{
						books.map((book) => {
							const { slug, data } = book;
							const {
								title,
								author,
								img,
								readtime,
								description,
								buy,
							} = data;

							return (
								<article class="flex gap-4">
									<a
										href={`/libro/${slug}`}
										class="mb-2 xl:mb-0 transition hover:scale-110"
									>
										<img
											transition:name={`img-${slug}`}
											class="mr-5 w-48 rounded"
											src={`/${img}`}
											alt={title}
										/>
									</a>
									<div class="flex flex-col justify-center">
										<h2
											transition:name={`title-${slug}`}
											class="mb-2 text-2xl font-bold leading-tight"
										>
											{title}
										</h2>
										<p class="mb-4 max-w-sm">
											{description}
										</p>
										<span class="text-xs">
											âŒ› Lectura en {readtime} minutos
										</span>
									</div>
								</article>
							);
						})
					}
				</div>
			</div>
		</section>
	</main>
</Layout>
